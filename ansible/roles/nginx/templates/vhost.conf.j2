server {
{% if nginx.ssl %}
        listen 443 ssl http2 ;
        ssl on;
        ssl_certificate /etc/ssl/certs/certificate.pem;
        ssl_certificate_key /etc/ssl/private/certificate.key;
{% else %}
        listen 80;
{% endif %}

        server_name {{item.name}}.{{domain}};
        location / {
                proxy_pass http://localhost:{{item.port}};
        }
}
process announce-routes {
    run /usr/bin/python3 /srv/route.py;
    encoder json;
}

neighbor {{inventory_hostname}} {                 # Remote neighbor to peer with
    router-id 127.0.0.1;              # Our local router-id
    local-address 127.0.0.1;          # Our local update-source
    local-as {{AS}};                    # Our local AS
    peer-as {{AS}};                     # Peer's AS

    api {
        processes [announce-routes];
    }
}